<!doctype html>
<html lang="pt-br">
  	<head>
	    <meta charset="utf-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1">
	    <title>Portal De Notícias Agetran</title>
	    <!-- Font Awesome -->
	      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
	      <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'>

	    <!-- bootstrap - link cdn -->
	      <link rel='stylesheet' href='https://cdn.rawgit.com/arafkarim/BootstrapPlusPlus/a32c1a63/dist/dark/css/bootstrap.min.css'>
	      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
	      <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">

	    <!-- JQuery -->
	    	<script src="js/jquery-3.3.1.js"></script>

	    <!-- incluindo css -->
	    	<link href="/css/style.css" rel="stylesheet">

	    <!-- favicon -->
	    	<link rel="shortcut icon" href="images/agetran-logo.png" />
		<script type="text/javascript">
			function Confirma(param){
				if (confirm("Confirma a exclusão da notícia?")){
					location.href="excluir?id_noticia=" + param;
				}
			}
		</script>
	</head>
	<body>
		<!-- Cabeçalho -->
	    <header>
	      <nav class="navbar navbar-expand-lg" aria-label="Offcanvas navbar large">
	        <div class="container-fluid">
	          <a class="navbar-brand" href="/"><img src="/images/agetran-logo.png" alt=""></a>
	          <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar2" aria-controls="offcanvasNavbar2">
	            <span class="navbar-toggler-icon navbar-dark"></span>
	          </button>
	          <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasNavbar2" aria-labelledby="offcanvasNavbar2Label">
	            <div class="offcanvas-header">
	              <h5 class="offcanvas-title" id="offcanvasNavbar2Label">Agetran</h5>
	              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
	            </div>
	            <hr class="featurette-divider-navbar">
	            <div class="offcanvas-body">
	              <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
	                <li class="nav-item">
	                  <a class="nav-link btn" aria-current="page" href="/" style="color: #FFF; font-size: 1.1rem; font-weight: 500;">Home</a>
	                </li>
	              </ul>
	            </div>
	          </div>
	        </div>
	      </nav>
	    </header>
	    <!-- Fim Cabeçalho -->

	    <div class="container" style="margin-top: 40px;">
		    <div class="card-photo-noticia d-flex justify-content-center" style="margin-bottom: 20px"><img alt="User Pic" src="http://localhost:3000/images/upload_images/<%=noticia[0].imagem%>" class="img-fluid img-thumbnail"></div>
		    <div class="row card-body-noticia d-flex justify-content-center">
		    	<div class="col-md-7 order-md-2">
		        <span class="category"><%=noticia[0].categoria%></span>
		        	<span class="noticia_autor"><%= noticia[0].autor %></span>
		            <h4><%=noticia[0].titulo%></h4>

		            <p class="text-muted"><%= noticia[0].resumo %></p>
		           	<span class="noticia_data" style="margin-bottom: 20px;"><%= noticia[0].data_criacao %></span>
		        </div>
		    </div>

		    <div class="text-justify" style="margin-top: 20px;">
				<p><%= noticia[0].noticia %></p>
			</div>

		    <div class="buttons-admin d-flex justify-content-center">
		    	<button type="button" class="btn btn-delete" id="excluir" onclick="Confirma(<%=noticia[0].id_noticia%>)">Excluir notícia</button>
				<a class="text-decoration-none" href="editar?id_noticia=<%=noticia[0].id_noticia%>"><button type="button" class="btn btn-edit" id="editar">Alterar Notícia</button></a>
			</div>
	    </div>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>